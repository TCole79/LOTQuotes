<h1>Registration</h1>

<div class="main-ring">
<img id="image" class="rotate3" src="<%= asset_path('ring2.png') %>" >
  <div class="centered">
    <div>
      <%= form_with model: @user, url: sign_up_path do |f|  %>
        
        <%= f.label :username %>
        <%= f.text_field :name %>
        
        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Sign Up" %>
      <% end %>
      <%= render "layouts/flash" %>
    </div>
  </div>  

</div>

